#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install FreeTDS"
BUILD_DIR=$1
DOWNLOAD_URL="http://c.aai.io/2Y0r1B1T0n2R/download/freetds_0.91.tgz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/freetds.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:/app/vendor/freetds_0.91/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:/app/vendor/freetds_0.91/lib"' >> $PROFILE_PATH