#!/usr/bin/env ruby

# sync output
$stdout.sync = true

DOWNLOAD_URL=""

puts "Installing freetds into #{ARGV[0]}/vendor/freetds"
puts `mkdir -p #{ARGV[0]}/vendor/freetds`
puts `curl http://f.cl.ly/items/41391e1i1q0w1d2n0Q1J/freetds-0.91.tgz -o - | tar -xz -C #{ARGV[0]} -f -`

ENV['LD_LIBRARY_PATH'] = "#{ARGV[0]}/vendor/freetds-0.91/lib:$LIBRARY_PATH"
ENV['LIBRARY_PATH'] = "#{ARGV[0]}/vendor/freetds-0.91/lib:$LIBRARY_PATH"
ENV['CPPATH'] = "#{ARGV[0]}/vendor/freetds-0.91/include:$CPPATH"
ENV['CPATH'] = "#{ARGV[0]}/vendor/freetds-0.91/include:$CPATH"
