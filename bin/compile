#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install FreeTDS"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="http://c.aai.io/2T341d1e3K0i/download/freetds_0.9.1.tgz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/freetds.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/freetds/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/freetds/lib"' >> $PROFILE_PATH
